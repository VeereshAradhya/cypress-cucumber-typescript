{
  "name": "cypress-cucumber-webpack-example",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "^10.12.11",
    "through": "^2.3.8"
  },
  "scripts": {
    "open": "cypress open",
    "test:pipeline": "cypress run --env TAGS='@pipeline-smoke' --browser chrome --spec \"cypress/integration/pipelines/*.feature\"",
    "test:helm": "cypress run --env TAGS='@helm-smoke' --browser chrome --spec \"cypress/integration/helm/*.feature\"",
    "test:addFlow": "cypress run --env TAGS='@addFlow-smoke' --browser chrome --spec \"cypress/integration/addFlow/*.feature\"",
    "test:knative": "cypress run --env TAGS='@knative-smoke' --browser chrome --spec \"cypress/integration/knative/*.feature\"",
    "test:all": "cypress run --spec \"**/*.features\"",
    "cy:update-snapshots": "cypress run --env updateSnapshots=true",
    "cy:run--snapshot-tests-with-reporter": "cypress run --reporter cypress-image-snapshot/reporter",
    "cy:run-tests-with-no-failure": "cypress run --env failOnSnapshotDiff=false",
    "clean-reports": "rm -rf cypress/reports && rm -rf allure-results",
    "merge-report": "npx mochawesome-merge --reportDir cypress/reports/separate-reports > cypress/reports/full_report.json",
    "generate-report": "npx mochawesome-report-generator --reportDir cypress/reports cypress/reports/full_report.json",
    "after:tests": "npm run merge-report; npm run generate-report",
    "cypress": "npm run clean-reports; npm run test; npm run after:tests",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "test:allure": "rm -rf allure-results && cypress run -b chrome -r mocha-allure-reporter -s **/features/*.feature; npm run report"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^4.0.2",
    "cypress": "^3.4.1",
    "cypress-cucumber-preprocessor": "latest",
    "ts-loader": "^5.3.1",
    "typescript": "^3.2.1",
    "webpack": "^4.28.2",
    "cypress-image-snapshot": "^3.1.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "mocha": "5.2.0",
    "mochawesome": "4.1.0",
    "mochawesome-merge": "2.0.1",
    "mochawesome-report-generator": "4.0.1",
    "mocha-allure-reporter": "^1.4.0",
    "allure-commandline": "^2.0.0"
  },
  "cypress-cucumber-preprocessor": {
    "step_definitions": "cypress/support/step-definitions/"
  }
}
